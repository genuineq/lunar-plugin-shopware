{% block lunar_payment_actions %}
    <sw-container columns="1fr 1fr" gap="0 10px" v-on:click.native.stop>
        {% block lunar_payment_actions_amount_field %}
            <div class="lunar-payment-actions--input">
                <sw-number-field
                    numberType="float"
                    :min="0.00"
                    :max="maxTransactionAmount"
                    :digits="decimalPrecision"
                    :disabled="maxTransactionAmount <= 0"
                    v-model="transactionAmount">
                </sw-number-field>
            </div>
        {% endblock %}

        <div class="lunar-payment-actions--button">
            {% block lunar_payment_actions_charge_button %}
                <sw-button-process
                    v-if="isChargePossible"
                    :disabled="maxTransactionAmount <= 0 || transactionAmount <= 0"
                    :isLoading="isLoading"
                    :processSuccess="isSuccessful"
                    @click="charge"
                >
                    {{ $tc('lunar-payment.paymentDetails.actions.chargeButton') }}
                </sw-button-process>
            {% endblock %}

            {% block lunar_payment_actions_refund_button %}
                <sw-button-process
                    v-else-if="isRefundPossible"
                    :disabled="maxTransactionAmount <= 0 || transactionAmount <= 0"
                    :isLoading="isLoading"
                    :processSuccess="isSuccessful"
                    @click="refund"
                >
                    {{ $tc('lunar-payment.paymentDetails.actions.refundButton') }}
                </sw-button-process>
            {% endblock %}

            {% block lunar_payment_actions_default_button %}
                <sw-button :disabled="true" v-else>
                    {{ $tc('lunar-payment.paymentDetails.actions.defaultButton') }}
                </sw-button>
            {% endblock %}

            {% block lunar_payment_actions_button_container_inner %}{% endblock %}
        </div>

        <template v-if="isRefundPossible">
            <div class="lunar-payment-actions--reason-code">
                {% block lunar_payment_actions_reason_field %}
                    <sw-single-select :options="reasonCodeSelection"
                                      :disabled="maxTransactionAmount <= 0 || transactionAmount <= 0"
                                      v-model="reasonCode"
                                      :placeholder="$tc('lunar-payment.paymentDetails.actions.reason.placeholder')"
                                      :popoverClasses="['lunar-payment-actions--popover-options']"
                    >
                    </sw-single-select>
                {% endblock %}
            </div>
        </template>
    </sw-container>
{% endblock %}
